{
    "family": "padel-booking-task",
    "requiresCompatibilities": ["FARGATE"],
    "networkMode": "awsvpc",
    "cpu": "256",
    "memory": "512",
    "executionRoleArn": "arn:aws:iam::aws:role/ecsTaskExecutionRole",
    "containerDefinitions": [
        {
            "name": "padel-booking-container",
            "image": "${ECR_REGISTRY}/${ECR_REPOSITORY}:${IMAGE_TAG}",
            "essential": true,
            "portMappings": [
                {
                "containerPort": 3000,
                "hostPort": 3000,
                "protocol": "tcp"
                }
            ]
        }
    ]
}